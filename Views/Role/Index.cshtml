@model IEnumerable<EmployeeVotingSystem.Models.Role>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Role Id
            </th>
            <th>
                Job Id
            </th>
            <th>
                Title
            </th>
            <th>
                Description
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.roleid)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.jobid)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.description)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.roleid">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.roleid">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.roleid">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
