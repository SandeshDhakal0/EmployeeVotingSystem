    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Job</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Job Title
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.jobtitle)
        </dd>
        <dt class = "col-sm-2">
            Min Salary
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.minsalary)
